<%- include('../../fragments/header.ejs') %>
<script type="application/javascript" src="/JS/validateActivityForm.js"></script>

    <main>
        <h2>Add Activity</h2>

        <form class="form" novalidate onsubmit="return validateForm();">

            <label for="Activity_Name">Activity_Name: <span class="symbol-required">*</span></label>
            <input type="text" name="Activity_Name" id="Activity_Name" required />
            <span id="errorActivity_Name"></span>

            <label for="Experience">Experience: <span class="symbol-required">*</span></label>
            <input type="text" name="Experience" id="Experience" required />
            <span id="errorExperience"></span>

            <div class="form-buttons">
                <p class="errors-text" id="errorsSummary"></p>
                <input type="submit" value="Add" class="form-buttons-submit" />
                <a href="/activity" class="form-buttons-cancel">Cancel</a>
            </div>


        </form>

    </main>

<%- include('../../fragments/footer.ejs') %>