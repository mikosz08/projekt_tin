<%- include('../../fragments/header.ejs') %>

    <main>
        <h2>Activity list</h2>

        <% if (activs.length < 1) {%>
            <h3> Lista jest pusta</h3>
            <% } else { %>

        <table class="table-list">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Experience</th>
                    <th>Action</th>
            </thead>

            <tbody>
                <% for (let _act of activs) { %>
                    <tr>
                        <td>
                            <%= _act.name %>
                        </td>
                        <td>
                            <%= _act.experience %>
                        </td>
                        <td>
                            <ul class="list-actions">
                                <li>
                                    <a href="/activity/details/<%=_act._id%>"
                                        class="list-actions-button-details">Details</a>
                                </li>
                                <li>
                                    <a href="/activity/edit/<%=_act._id%>" class="list-actions-button-edit">Edit</a>
                                </li>
                                <li>
                                    <a href="/activity/delete/<%=_act._id%>"
                                        class="list-actions-button-delete">Delete</a>
                                </li>
                            </ul>
                        </td>
                    </tr>
                    <% } %>

        </table>
        <% } %>
        <p><a href="/activity/add" class="button-add">Add New Activity</a></p>
    </main>

    <%- include('../../fragments/footer.ejs') %>