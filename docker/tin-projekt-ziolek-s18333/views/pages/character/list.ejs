<%- include('../../fragments/header.ejs') %>
    <main>
        <h2>Character list</h2>

        <% if (chars.length < 1) {%>
            <h3> Lista jest pusta</h3>
            <% } else { %>
                <table class="table-list">
                    <thead>
                        <tr>
                            <th>Nick</th>
                            <th>Class</th>
                            <th class="table-hidden-cols-first">Race</th>
                            <th class="table-hidden-cols-first">Aligment</th>
                            <th class="table-hidden-cols-second">Level</th>
                            <th>Action</th>
                        </tr>
                    </thead>

                    <tbody>
                        <% for (let _char of chars) { %>
                            <tr>
                                <td>
                                    <%= _char.name %>
                                </td>
                                <td>
                                    <%= _char.char_class %>
                                </td>
                                <td class="table-hidden-cols-first">
                                    <%=_char.race%>
                                </td>
                                <td class="table-hidden-cols-first">
                                    <%=_char.aligment%>
                                </td>
                                <td class="table-hidden-cols-second">
                                    <%=_char.level%>
                                </td>
                                <td>
                                    <ul class="list-actions">
                                        <li>
                                            <a href="/character/details/<%=_char._id%>"
                                                class="list-actions-button-details">Details</a>
                                        </li>
                                        <li>
                                            <a href="/character/edit/<%=_char._id%>"
                                                class="list-actions-button-edit">Edit</a>
                                        </li>
                                        <li>
                                            <a href="/character/delete/<%=_char._id%>"
                                                class="list-actions-button-delete">Delete</a>
                                        </li>
                                    </ul>
                                </td>
                            </tr>

                            <% } %>
                    </tbody>
                </table>
                <% } %>
                    <p><a href="character/add" class="button-add">Add New Character</a></p>
    </main>

    <%- include('../../fragments/footer.ejs') %>